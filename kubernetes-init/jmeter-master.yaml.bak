---

apiVersion: v1
kind: Pod
metadata:
  name: master
spec:
  securityContext:
    runAsUser: 1000
    fsGroup: 1000
  volumes:
    - name: jmeter-storage
      persistentVolumeClaim:
        claimName: jmeter-claim
  containers:
  - name: master
    imagePullPolicy: IfNotPresent
    image: test/jmeter
    args: ["-n -t /etc/jmeter/JMXSCRIPT -j /etc/jmeter/results/result-DATETIME.jtl -l /etc/jmeter/logs/master-log-DATETIME.log  -e -o /etc/jmeter/HtmlReport-DATETIME -R SERVERS"]
    env:
    - name: JVM_ARGS
      value: "-Xms512m -Xmx1024m"
    - name: mode
      value: "master"
    resources:
      limits:
        memory: 1024Mi
        cpu: 1000m
      requests:
        cpu: 1000m
        memory: 1024Mi
    volumeMounts:
        - mountPath: "/etc/jmeter"
          name: jmeter-storage

---

apiVersion: v1
kind: Service
metadata:
  name: master
spec:
  selector:
    app: master
  ports:
    - name: master
      port: 1099
  type: ClusterIP

---
